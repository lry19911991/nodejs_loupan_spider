.wrap {
  padding: 15px;
  font-size: 14px;
}

.label {
  margin-bottom: 5px;
  font-weight: bold;
  display: inline-block;
}

.input {
  display: block;
  height: 17px;
  padding: 3px 6px;
  background-color: #fff;
  border: 1px solid #ccc;
  border-radius: 4px;
  box-shadow: inset 0 1px 1px rgba(0,0,0,.075);
  margin-bottom: 15px;
}

.tip,
.helpc {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.button {
  color: #fff;
  background-color: #d9534f;
  border-color: #d43f3a;
  display: block;
  padding: 7px 12px;
  font-size: 14px;
  line-height: 1.5;
  text-align: center;
  white-space: nowrap;
  cursor: pointer;
  border-radius: 4px;
  margin: 15px auto;
}

.disabled {
  opacity: 0.8;
}

.help {
  padding: 10px;
  margin: 0 0 10px;
  font-size: 13px;
  color: #333;
  word-break: break-all;
  word-wrap: break-word;
  background-color: #f5f5f5;
  border: 1px solid #ccc;
  border-radius: 4px;
  overflow: hidden;
}

.helpt {
  font-weight: bold;
}

.website {
  text-align: center;
  white-space: nowrap;
}
.city_name{
    width: 100%;
    color:rgb(34, 154, 181);
    height:100rpx;
    line-height:50rpx;
    text-align: center;
}
.city{
  display: inline-block;
    position: relative;
    justify-content: space-between;
    background-color:rgb(239, 239, 239);
    width:60%;
    height:50rpx;
    margin:0 auto;
    border-radius: 10rpx;
    margin-left:50rpx ;
    border-bottom:2rpx solid rgb(255, 255, 255);
}
.city_box{
    position: relative;
    z-index: 1999;
}
.city_select{
    margin-top:0;
    z-index: 100;
    position: absolute; 
}
.select_one{
    text-align: center;
    background-color:rgb(239, 239, 239);
    width:676rpx;  
    height:50rpx;
    line-height:50rpx;
    margin:0 5%;
    border-bottom:2rpx solid rgb(255, 255, 255);
}

.rotateRight{
    transform: rotate(180deg); 
}


